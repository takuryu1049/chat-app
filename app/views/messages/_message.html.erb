<div class = "message-box">
  <div class = "row-1">
    <div class = "user-name">
      <%=  message.user.name %>
    </div>
    <div class = "date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class = "row-2">
    <div class = "message">
      <%= message.content %>
    </div>
      <%= image_tag message.image.variant(resize:'500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>